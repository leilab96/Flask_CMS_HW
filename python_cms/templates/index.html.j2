{% extends "base.html.j2" %}
{% block title %}Hello World{% endblock %}
{% block content %}
  {% if posts|length == 0 %}
    <h1>We have no posts to show</h1>
  {% endif %}
  {% for message in get_flashed_messages() %}
    <div class="toast toast-success">
        <button class="btn btn-clear float-right"></button>
          {{message}}
    </div>
  {% endfor %}
  <div class="columns">
    <div class="promoted-posts">
        {% for post in posts|selectattr("promoted", "equalto", True) %}
       <div class="column col-6 col-md-12">
         <div class="promoted-card article-card">
           <div class="card-image">
             {% if post.teaser_image == "" %}
               <img src="{{ url_for('static', filename='default.jpg') }}" class="img-responsive article-image" alt="">
             {% else %}
               <img src="/files/{{ post.teaser_image }}" class="img-responsive article-image" alt="">
             {% endif %}
           </div>
           <div class="card-header">
             <div class="card-title h5">{{ post.title }}</div>
           </div>
           <div class="card-footer">
             <a class="btn btn-primary" href="/post/{{ post.id }}">Read More</a>
           </div>
         </div>
       </div>
      {% endfor %}
    
    </div>
    <div class="non-promoted-posts">
        {% for post in posts|selectattr("promoted", "equalto", False) %}
       <div class="column col-6 col-md-12">
         <div class="non-promoted-card article-card">
           <div class="card-image">
             {% if post.teaser_image == "" %}
               <img src="{{ url_for('static', filename='default.jpg') }}" class="img-responsive article-image" alt="">
             {% else %}
               <img src="/files/{{ post.teaser_image }}" class="img-responsive article-image" alt="">
             {% endif %}
           </div>
           <div class="card-header">
             <div class="card-title h5">{{ post.title }}</div>
           </div>
           <div class="card-footer">
             <a class="btn btn-primary" href="/post/{{ post.id }}">Read More</a>
           </div>
         </div>
       </div>
      {% endfor %}   
    </div>



  </div>
{% endblock %}
{% block bodysource %}
<script src="{{url_for('static', filename='post_function.js')}}"></script>

{% endblock %}
